@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />

<div class="container mt-5">
   <div id="info2" name="info2"></div>
    <div class="row mt-2">
        <div class="col-md-6 col-12">
            <h3 class="text-primary ml-2">Stock de Productos</h3>
        </div>
      
        <div class="col-md-6 col-12 text-right">
            <a class="btn btn-primary" asp-action="NuevoInventario">
                <i class="fas fa-plus"></i> Nuevo inventario
            </a>
         </div>
        <div class="col-md-12 col-12 text-right">
            <form asp-action="ImprimirInventario" asp-controller="Inventario"
                  target="_blank" rel="noopener noreferrer" method="post">
                <input type="hidden" name="info" id="info" value="" />
                <button type="submit" class="btn btn-warning mt-2" 
                            style="width:160px;">
                    <i class="fas fa-print"></i>  Imprimir
                </button>
            </form>
        </div>
        </div>
    </div>
 
 
<div class="p-4 border rounded">
    <table id="tblDatos" class="table table-striped table-bordered" style="width:100%">
        <thead class="thead-dark">
            <tr class="table-info">
                <th>Bodega</th>
                <th>Producto</th>
                <th>Costo</th>
                <th>Cantidad</th>
            </tr>
        </thead>
    </table>
</div>
<div class="col-6 p-2">
    <a class="btn btn-success" asp-action="Historial">
        <i class="fas fa-calendar-week"></i> Historial
    </a>

</div>
@section Scripts{
    <script src="~/js/inventario.js"></script>
    <script>
        $(document).ready(function () {
            const $dt = $('#tblDatos').DataTable();
            $dt.on('search.dt', function (e) {
                document.getElementById('info').value = $dt.search();
                /*("#info2").val($dt.search());*/
                /*$('#info2').html('Texto buscado: ' + $dt.search());*/
            });
        });
    </script>
}
