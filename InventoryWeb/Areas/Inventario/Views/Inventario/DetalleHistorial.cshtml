@model IEnumerable<Inventory.Models.InventarioDetalle>
@{
    ViewData["Title"] = "DetalleHistorial";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var bodega = ViewBag.Bodega;
    var usuario = ViewBag.Usuario;
    var fechaInicio = ViewBag.FechaInicial;
    var fechaFin = ViewBag.FechaFinal;
}
<br />
<div class="row mt-5">
    <div class="col-6 col-md-12">
        <h4 class="text-primary">Detalle Historial de Inventario</h4>
    </div>
</div>

<br />
<div class="row mt-5">
    <div class="col-6 col-md-12">
        <h4 class="text-primary">Detalle Historial de Inventario</h4>
        <h5 class="text-danger">
            Bodega seleccionada: @bodega ||
            Usuario responsable: @usuario
        </h5>
        <h6 class="text-dark font-weight-bold">
            Fecha inicio: @fechaInicio ||
            Fecha final: @fechaFin
        </h6>
    </div>
</div>
<div>
    <table class="table table-striped border">
        <thead class="thead-dark">
            <tr class="table-secondary thead-dark">
                <th>
                    Producto
                </th>
                <th>
                    Marca
                </th>
                <th style="text-align:right;">
                    Costo
                </th>
                <th style="text-align:right;">
                    Stock Anterior
                </th>
                <th style="text-align:right;">
                    Cantidad
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="font-size:14px;">
                        @Html.DisplayFor(i => item.Producto.Descripcion)
                    </td>
                    <td style="font-size:14px;">
                        @Html.DisplayFor(i => item.Producto.Marca.Nombre)
                    </td>
                    <td style="font-size:14px; text-align:right;">
                        @Html.DisplayFor(i => item.Producto.Costo)
                    </td>
                    <td style="font-size:14px; text-align:right;">
                        @Html.DisplayFor(i => item.StockAnterior)
                    </td>
                    <td style="font-size:14px; text-align:right; color:blue;font-weight:bold;">
                        @Html.DisplayFor(i => item.Cantidad)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="col-6 p-2">
    <a class="btn btn-success" asp-action="Historial">Regresar</a>
</div>


