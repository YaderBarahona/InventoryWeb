@model Inventory.Models.Marca

@{

    Layout = "~/Views/Shared/_Layout.cshtml";
    var titulo = "Creación de Marcas";
}
<style>
    input {
        max-width: 7000px;
        min-width: 150px;
    }

    .etiqueta {
        width: 130px;
        text-align: right;
    }
</style>
<form method="post">
    <div class="row p-3 border-0">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </div>
    @if (Model.MarcaId != 0)
    {
        // Actualizar
        titulo = "Actualización de Marca";
    }
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <hr>
                <div class="card-header-pills rounded-circle">
                    <h4 class="card-header-title text-primary text-center fw-bold">
                        @titulo
                    </h4>
                </div>
                <!-- se le puede poner text-muted y mb-3 (margen bottom o mt margen top)  -->
                <h5 class="card-subtitle text-primary text-center">
                    Empresa ACME Ltda
                </h5>
                <hr>

                <div class="input-group mt-2">
                    <span class="input-group-text etiqueta" name="Nombre" id="">Nombre: </span>
                    <input asp-for="Nombre" class="form-control" aria-label="Nombre">
                </div>

                <div class="input-group mt-2">
                    <span class="input-group-text etiqueta" name="Estado"
                          id="Estado">Estado:</span>
                    <select asp-for="Estado" class="form-select">
                        <option value=true>Activo</option>
                        <option value=false>Inactivo</option>
                    </select>
                </div>
                <div class="form-group row pt-5">
                    <div class="col-12">
                        @if (Model.MarcaId != 0)
                        {
                            <partial name="_BotonesActualizarRegresar" model="Model.MarcaId" />
                        }
                        else
                        {
                            <partial name="_BotonesCrearRegresar" />
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
