
@{
    ViewData["Title"] = "Index";
    
}
<br /> 
<div class="container mt-5">
    <div class="row">
        <div class="col-12 col-md-6">
            <h3 class="text-primary ml-2">Lista de productos</h3>
        </div>
        <div class="col-12 col-md-6">
            <a class="btn btn-primary" 
                asp-action="Create">
                <i class="fas fa-plus"> Crear nuevo producto</i>
            </a>
        </div>
    </div>
</div>
<div>
 <br />
    <table id="tblDatos" class="display nowrap" style="width:100%">
        <thead class="thead-light">
            <tr class="table-info">
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Precio</th>
                <th>Existencia</th>
                <th>Categoria</th>
                <th>Marca</th>
                <th>Operación</th>
               </tr>
        </thead>
    </table>
</div>
@section Scripts{
  <script src="~/js/producto.js"></script>
}
